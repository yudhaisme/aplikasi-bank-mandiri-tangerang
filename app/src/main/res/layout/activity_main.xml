<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prayudha.asdi.mandiritangerangservice.MainActivity"
    android:background="@drawable/backround2">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">



        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:id="@+id/judul1"
            android:layout_marginTop="15dp"
            android:src="@drawable/logoatas"
            android:layout_marginBottom="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    <ImageView
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tangerang_office"
        app:srcCompat="@drawable/tangerang_office"
        android:layout_below="@+id/judul1"/>


        <ImageView
            android:id="@+id/mandiri_informasi"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/judul1"
            android:layout_toEndOf="@+id/tangerang_office"
            android:layout_toRightOf="@+id/tangerang_office"
            app:srcCompat="@drawable/mandiri_informasi" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:id="@+id/about_apps"
        app:srcCompat="@drawable/about_app"
        android:layout_alignTop="@+id/help"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/mandiri_informasi"
        android:layout_toStartOf="@+id/mandiri_informasi"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/help"
        app:srcCompat="@drawable/help1"
        android:layout_below="@+id/mandiri_informasi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tangerang_office"
        android:layout_toEndOf="@+id/tangerang_office"
        android:layout_marginBottom="20dp" />


</RelativeLayout>
</ScrollView>
